/**
 * This is the tsconfig extension that only applies to ES Modules.
 */
 {
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
  },
  "include": ["./src/**/*.ts"],
  "filesGlob": ["./src/**/*.ts"]
}
